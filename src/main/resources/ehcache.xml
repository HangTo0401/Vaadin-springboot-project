<?xml version="1.0" encoding="UTF-8"?>
<ehcache>
    <diskStore path="java.io.tmpdir"/>
    <defaultCache maxEntriesLocalHeap="1000000" eternal="true">
        <persistence strategy="localTempSwap"/>
    </defaultCache>

    <cache name="supplierCache" maxEntriesLocalHeap="0">
        <searchable>
            <searchAttribute name="id"/>
        </searchable>
    </cache>

    <cache name="productCache" maxEntriesLocalHeap="0">
        <searchable>
            <searchAttribute name="id"/>
        </searchable>
    </cache>

</ehcache>